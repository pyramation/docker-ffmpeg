#!/bin/bash

USAGE="Usage: `basename $0` <infile> <outfilebasename>"

if [ "$#" -ne "2" ]; then
    echo "$USAGE"
    exit 1
fi

file=$1
out=$2

avconv -i $file -acodec libvorbis -vcodec libtheora $out.ogv
avconv -i $file -acodec libvorbis $out.webm
avconv -i $file -acodec libfaac -ab 96k -vcodec libx264 -threads 0 $out.mp4
